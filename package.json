{
  "name": "@nateradebaugh/react-datetime",
  "version": "4.0.0-rc.9",
  "description": "A lightweight but complete datetime picker React.js component",
  "license": "MIT",
  "homepage": "https://github.com/NateRadebaugh/react-datetime",
  "repository": {
    "type": "git",
    "url": "https://github.com/NateRadebaugh/react-datetime"
  },
  "authors": [
    "Javier Marquez",
    "Nate Radebaugh"
  ],
  "main": "dist/index.js",
  "umd:main": "dist/react-datetime.umd.production.js",
  "module": "dist/react-datetime.es.production.js",
  "typings": "dist/index.d.ts",
  "files": [
    "css",
    "dist"
  ],
  "bundlesize": [
    {
      "path": "dist/nateradebaughreact-datetime.cjs.production.js",
      "maxSize": "4.4 kB"
    },
    {
      "path": "dist/nateradebaughreact-datetime.cjs.development.js",
      "maxSize": "6.4 kB"
    },
    {
      "path": "dist/nateradebaughreact-datetime.es.production.js",
      "maxSize": "4.4 kB"
    },
    {
      "path": "dist/nateradebaughreact-datetime.umd.production.js",
      "maxSize": "5.1 kB"
    },
    {
      "path": "dist/nateradebaughreact-datetime.umd.development.js",
      "maxSize": "7.3 kB"
    }
  ],
  "keywords": [
    "react",
    "react-component",
    "datepicker",
    "timepicker",
    "datetimepicker",
    "datetime"
  ],
  "scripts": {
    "now-build": "tsdx build",
    "build": "tsdx build",
    "start": "tsdx watch",
    "lint": "yarn tslint --project tsconfig.json",
    "lint:fix": "yarn tslint --project tsconfig.json --fix",
    "test": "yarn lint:fix&&cross-env CI=1 TZ=Europe/Stockholm tsdx test",
    "test:coverage": "yarn lint:fix&&yarn test --coverage",
    "test:all": "echo 'Running tests...' && yarn test:coverage && yarn bundlesize && echo 'All tests passed! ğŸ¤˜'",
    "test:watch": "cross-env TZ_Europe/Stockholm tsdx test --watch",
    "circleci-test": "cross-env CI=1 TZ=Europe/Stockholm JEST_JUNIT_OUTPUT=reports/junit/js-test-results.xml tsdx test --ci --reporters=jest-junit --runInBand",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prettier": "prettier --write **/*.{json.js,jsx,ts,tsx.css}",
    "prepare": "yarn build",
    "predeploy": "cd example && yarn install && yarn build"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,tsx}": [
      "prettier --write",
      "tslint --project tsconfig.json --fix",
      "git add",
      "cross-env CI=1 TZ=Europe/Stockholm jest --bail --findRelatedTests"
    ],
    "{src,test}/**/*.{json,css,scss}": [
      "prettier --write",
      "git add"
    ],
    "{src,test}/**/*": [
      "bundlesize"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "peerDependencies": {
    "date-fns": "^1.29.0",
    "react": ">=16",
    "react-dom": "^16.5.0"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.4",
    "bundlesize": "^0.17.1",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^2.4.1",
    "jest-date-mock": "^1.0.7",
    "jest-junit": "^6.4.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tsdx": "^0.6.1",
    "tslib": "^1.10.0",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "classcat": "^3.2.5",
    "date-fns": "^1.30.1",
    "react-onclickoutside": "^6.8.0",
    "react-popper": "^1.3.3"
  }
}
